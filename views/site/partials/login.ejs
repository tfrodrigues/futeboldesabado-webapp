<div class="fb-header__nav__sub" id="fb-login-page">
	<div class="fb-container" data-js="submenu" data-submenu="3">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<label>Login: <span>*</span></label>
				<input class="form-control" id="nome" name="nome" maxlength="60" type="text" data-bind="value: dataModel.login" required>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: left">
				<label>Senha: <span>*</span></label>
				<input class="form-control" id="confirmarSenha" maxlength="15" type="password" data-bind="value: dataModel.senha">
			</div>
	</div>
	<div>
		<a href="#" data-bind="click: login" class="fb-card-action">ENTRAR</a>
	</div>
</div>

<script type="text/javascript">
	function abreMenuLogin(menu) {
		$("[data-js='menu-login']").removeClass("is-active");
		$("[data-menu='"+menu+"']").addClass("is-active");
		$("[data-js='submenu']").removeClass("is-active");
		$("[data-submenu='"+menu+"']").addClass("is-active");
	}

	function fechaMenuLogin() {
		$("[data-js='menu-login']").removeClass("is-active");
		$("[data-js='submenu']").removeClass("is-active");
	}
</script>

<script type="text/javascript" src="/dist/js/<%= path %>/login.js"></script>
